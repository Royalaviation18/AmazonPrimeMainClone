<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logoBg"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/bgLogo"
        android:layout_width="310dp"
        android:layout_height="80dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/tvSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bgLogo"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Sign-Up, Its free!"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etUName"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/tvSlogan"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:hint=" Name"
        android:textColorHint="@color/hintColor"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etUEmail"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/etUName"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:hint=" Email"
        android:textColorHint="@color/hintColor"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etUPhone"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/etUEmail"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:hint=" Phone number"
        android:textColorHint="@color/hintColor"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etUPass"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/etUPhone"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:hint=" Password"
        android:inputType="textPassword"
        android:textColorHint="@color/hintColor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvPlans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etUPass"
        android:text="Select your plan"
        android:layout_marginLeft="35dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/spPlans"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_below="@id/etUPass"
        android:layout_marginRight="28dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:background="@color/white" />

    <CheckBox
        android:id="@+id/chkTerms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spPlans"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:buttonTint="@color/white"
        android:text="@string/terms"
        android:textColor="@color/hintColor"
        android:textSize="15sp" />


    <Switch
        android:id="@+id/switchMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chkTerms"
        android:checked="true"
        android:switchMinWidth="50dp"
        android:layout_marginTop="20dp"
        android:text="Mail me the latest offers and notifications"
        android:textColor="@color/white"
        android:textOff="OFF"
        android:layout_marginLeft="55dp"
        android:textOn="ON"/>

    <Button
        android:id="@+id/rBtnSignUp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:background="@color/signBtnColor"
        android:layout_below="@id/switchMail"
        android:layout_marginLeft="35dp"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvAlready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:textColor="@color/white"
        android:layout_below="@id/rBtnSignUp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textColor="@color/signBtnColor"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rBtnSignUp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="115dp" />




</RelativeLayout>